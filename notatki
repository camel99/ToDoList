                    localStorage.setItem('autosave', task);
                }, 1000);
            } catch (e) {
                if (e == QUOTA_EXCEEDED_ERR) {
                    alert('Quota exceeded!');
                }
            }
            if (localStorage.getItem('autosave')) {
                note.value = localStorage.getItem('autosave');
            }
